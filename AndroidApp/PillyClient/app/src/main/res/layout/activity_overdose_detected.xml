<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.pilly.pillyclient.OverdoseDetected"
    android:background="@color/lightest">

    <TextView
        android:id="@+id/warning_pilly_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32pt"
        android:textColor="@color/darkest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32pt"/>

    <TextView
        android:id="@+id/overdose_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/warning_pilly_label"
        android:layout_centerHorizontal="true"
        android:textSize="10pt"
        android:textColor="@color/dark"
        android:layout_marginTop="16pt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warning_snooze"
        android:id="@+id/warning_snooze_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="16pt"
        android:paddingBottom="16pt"
        android:textSize="9pt"
        android:background="@color/dark"
        android:textColor="@color/light"
        android:onClick="dismiss"/>

</RelativeLayout>
