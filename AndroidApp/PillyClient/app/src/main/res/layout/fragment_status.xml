<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightest">

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15pt"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/pillnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="52pt" />

    <TextView
        android:id="@+id/pleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pillnr"
        android:layout_centerHorizontal="true"
        android:text="@string/pills_left"
        android:textColor="@color/dark"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/nextpill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pleft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10pt"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextpill"
        android:layout_marginBottom="6pt"
        android:layout_marginTop="6pt"
        android:text="@string/recent_events"
        android:textColor="@color/dark"
        android:textSize="8pt" />

    <TableLayout
        android:id="@+id/table_recent_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recent"
        android:stretchColumns="1"
        android:onClick="onEventClick">

        <TableRow android:background="@color/light">

            <TextView
                android:id="@+id/timestamp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/event1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />
        </TableRow>

        <TableRow android:background="@color/lightest">

            <TextView
                android:id="@+id/timestamp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/event2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />
        </TableRow>

        <TableRow android:background="@color/light">

            <TextView
                android:id="@+id/timestamp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/event3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />
        </TableRow>

        <TableRow android:background="@color/lightest">

            <TextView
                android:id="@+id/timestamp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/event4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />
        </TableRow>

        <TableRow android:background="@color/light">

            <TextView
                android:id="@+id/timestamp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/event5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5pt"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="10pt" />
        </TableRow>
    </TableLayout>

</RelativeLayout>